<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="windowPanel" prefHeight="350.0" prefWidth="600.0" styleClass="pane"
            stylesheets="@../../style/alert.css" xmlns="http://javafx.com/javafx/null"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.flectone.mix.javafx.controller.alert.AlertExceptionController">
   <AnchorPane fx:id="topBarPanel" prefHeight="32.0" prefWidth="200.0" styleClass="pane" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <ImageView fx:id="errorImage" fitHeight="27.0" fitWidth="24.0" layoutX="9.0" layoutY="4.0" pickOnBounds="true"
                 preserveRatio="true"/>
      <Label fx:id="errorLabel" layoutX="37.0" layoutY="8.0" text="Ошибка в приложении"/>
   </AnchorPane>
   <AnchorPane fx:id="contentPanel" layoutX="14.0" layoutY="48.0" prefHeight="302.0" prefWidth="600.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="40.0">
      <JFXTextArea fx:id="textArea" focusColor="#405aa800" prefHeight="222.0" prefWidth="558.0"
                   unFocusColor="#4d4d4d00" AnchorPane.bottomAnchor="58.0" AnchorPane.leftAnchor="21.0"
                   AnchorPane.rightAnchor="21.0" AnchorPane.topAnchor="23.0"/>
      <Label fx:id="problemLabel" prefHeight="17.0" prefWidth="305.0" text="Сообщить о проблеме"
             AnchorPane.bottomAnchor="41.0" AnchorPane.leftAnchor="21.0"/>
      <JFXButton fx:id="skipButton" onMouseClicked="#okButtonEvent" prefHeight="27.0" prefWidth="145.0" text="Окей"
                 AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="21.0">
         <font>
            <Font size="15.0"/>
         </font>
      </JFXButton>
      <Label fx:id="titleLabel" prefHeight="17.0" prefWidth="552.0" text="Название ошибки"
             AnchorPane.leftAnchor="21.0" AnchorPane.rightAnchor="21.0" AnchorPane.topAnchor="5.0"/>
   </AnchorPane>
</AnchorPane>
